{
  "name": "eslint-config-txo-typescript-react",
  "version": "2.0.3",
  "description": "Technology Studio - Eslint typescript react config",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/eslint-config-txo-typescript-react.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "eslint --max-warnings 0 .",
    "fixcode": "eslint . --fix",
    "git-hook": "yarn -s lint",
    "compile": "tsc",
    "prepare": "husky install && yarn compile",
    "sanity": "yarn lint && yarn test --coverage && tsc --noEmit && yarn outdated && echo 'success'",
    "semantic-release": "semantic-release",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "eslint-config-txo-typescript": "^4.0.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "devDependencies": {
    "@txo/commitlint": "^1.0.6",
    "@txo/semantic-release": "^1.0.2",
    "@txo/tsconfig": "^1.1.0",
    "@types/eslint": "^8.44.7",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "react": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
