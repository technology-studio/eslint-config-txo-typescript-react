{
  "name": "eslint-config-txo-typescript-react",
  "version": "3.0.6",
  "description": "Technology Studio - Eslint typescript react config",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/eslint-config-txo-typescript-react.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:clean": "yarn rimraf lib",
    "build:lib": "yarn tsc",
    "build:watch": "yarn tsc --watch",
    "build": "yarn build:clean && yarn build:lib",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "lint:ci": "yarn lint",
    "lint:fix": "eslint . --fix",
    "lint": "eslint --max-warnings 0 .",
    "prepare": "husky && yarn build",
    "sanity": "yarn build && yarn lint:ci && tsc --noEmit && yarn test --coverage && echo 'success'",
    "semantic-release": "semantic-release",
    "test:watch": "concurrently \"yarn build:watch\" \"yarn test --watch\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0"
  },
  "devDependencies": {
    "@txo/commitlint": "^1.0.23",
    "@txo/semantic-release": "^2.0.10",
    "@txo/tsconfig": "^2.0.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.20",
    "eslint-config-txo-typescript": "^7.3.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "react": "^18.3.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.2"
  }
}
