{
  "name": "eslint-config-txo-typescript-react",
  "version": "2.0.82",
  "description": "Technology Studio - Eslint typescript react config",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/eslint-config-txo-typescript-react.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "git-hook": "yarn -s lint",
    "lint:ci": "yarn lint",
    "lint:fix": "eslint . --fix",
    "lint": "eslint --max-warnings 0 .",
    "ncu-all": "ncu -i",
    "prepare": "husky && yarn build",
    "sanity": "yarn build && yarn lint:ci && yarn outdated && echo 'success'",
    "semantic-release": "semantic-release",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "eslint-config-txo-typescript": "^4.0.70",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0"
  },
  "devDependencies": {
    "@txo/commitlint": "^1.0.19",
    "@txo/semantic-release": "^2.0.9",
    "@txo/tsconfig": "^1.1.1",
    "@types/eslint": "^8.56.12",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "react": "^18.3.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
